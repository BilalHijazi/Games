<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/reviewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stam"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/reviewer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewer_name"
        android:layout_marginLeft="8dp"
        android:text="blabla@blabla.com"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

    <RatingBar
        android:id="@+id/reviewer_rating"
        style="@android:style/Widget.Holo.Light.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_date"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:numStars="5" />

    <TextView
        android:id="@+id/reviewer_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="stam gameName"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="3dp"
        android:layout_below="@id/reviewer_rating"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/reviewer_comment"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewer_email"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="aaaaaaa aaaaaaaaa aaaaaaa aaaaaaa aaaaaa aaaaaa aaaaaaaaa"
        android:textSize="20sp"


        android:textStyle="normal" />
    
    <TextView
        android:id="@+id/review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19/2/2020"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        />

   

</RelativeLayout>