<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp" android:layout_height="450dp">
    <TextView
        android:id="@+id/txt_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate this game: "
        android:textSize="25sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        />
    <RatingBar
        android:id="@+id/rating_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_rate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:numStars="5" />
    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type what do you think about the game:"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/rating_post"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/edittxt_comment"
        android:layout_width="350dp"
        android:layout_marginLeft="25dp"
        android:layout_height="180dp"
        android:layout_below="@+id/txt_comment"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textMultiLine"
        android:textSize="25sp"
        android:gravity="start"
        android:textStyle="italic" />
    <Button
        android:id="@+id/btn_post"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_below="@+id/edittxt_comment"
        android:textSize="25sp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@+id/edittxt_comment"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        />
</RelativeLayout>