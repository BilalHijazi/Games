<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_single_relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    >


    <ImageView
        android:id="@+id/listview_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"

        />

    <TextView
        android:id="@+id/listview_item_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_toRightOf="@+id/listview_image"


        />

    <TextView
        android:id="@+id/listview_item_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_below="@+id/listview_item_title"
        android:layout_toRightOf="@+id/listview_image"
        />

</RelativeLayout>